   "compilerOptions": {
      "target": "ES2022",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
   },
   "include": [
      "src"
   ]
}